<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginBottom="-25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/layout_welcome_bg"
            android:paddingTop="50dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/text_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TaskMaster"
                android:textSize="36dp"
                android:textStyle="bold"
                android:textColor="@color/text_highlight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where household harmony meets effortless task management for families and roommates alike!"
                android:textSize="16sp"
                android:textColor="@color/text_small"
                android:layout_weight="1"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_welcome_btns_bg"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/welcome_signin_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="Sign In"
                    android:textColor="@color/background" />

                <Button
                    android:id="@+id/welcome_signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="#00000000"
                    android:text="Sign Up"
                    android:textColor="@color/text_regular" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>