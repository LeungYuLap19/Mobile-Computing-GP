<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape with solid color, corners, and stroke -->
    <item>
        <shape>
            <solid android:color="@color/text_small"/>
            <corners android:radius="5dp"/>
            <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/text_small"/>
        </shape>
    </item>
    <!-- Image drawable with adjusted size -->
    <item
        android:drawable="@drawable/tick"
        android:gravity="center"
        android:width="14dp"
        android:height="14dp" />
</layer-list>