<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_rounded_textbox"
        android:backgroundTint="@color/text_regular"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/leftchat_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello! how are you"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/leftchat_textview"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_rounded_textbox"
        android:backgroundTint="@color/background"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:id="@+id/rightchat_layout">

        <TextView
            android:id="@+id/rightchat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am good"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>